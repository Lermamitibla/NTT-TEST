<Window x:Class="NTT_TEST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NTT_TEST"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="ConnectionStatus" HorizontalAlignment="Left" Height="23" Margin="643,26,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="98" IsReadOnly="True"/>
        <Label Content="Connection:" HorizontalAlignment="Left" Margin="567,26,0,0" VerticalAlignment="Top"/>
        <ListBox Name="ChatBox" HorizontalAlignment="Left" Height="287" Margin="37,26,0,0" VerticalAlignment="Top" Width="424" IsEnabled="False"/>
        <TextBox Name="MessageInputBox" HorizontalAlignment="Left" Height="23" Margin="37,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="424"/>
        <Button  Name="SendMessageButton" Content="Send" HorizontalAlignment="Left" Margin="483,341,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.249,0.55"/>
        <TextBox Name="Port" HorizontalAlignment="Left" Height="23" Margin="643,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98"/>
        <Label Content="Port:" HorizontalAlignment="Left" Margin="567,63,0,0" VerticalAlignment="Top"/>
        
        <Button Name="ConnectToServer" Content="Connect to Server" HorizontalAlignment="Left" Margin="590,140,0,0" VerticalAlignment="Top" Width="124"/>
        <Label Content="IP address:" HorizontalAlignment="Left" Margin="567,97,0,0" VerticalAlignment="Top"/>
        <TextBox Name="IPAddress" HorizontalAlignment="Left" Height="23" Margin="643,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98"/>
    </Grid>
</Window>
